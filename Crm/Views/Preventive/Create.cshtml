    function SetData() {
        var Data = [];
        var Sconto = $('#Sconto')[0].value;
        var Totale = $('#Totale')[0].value;
        Data.push(Sconto);
        Data.push(Totale);
        Destination = $('#Destination')[0];
        var Result = CalculateDataUsingCustomInput(Data, CalculationType.PERCENTAGE);
        $(Destination).val(Result);
    }

