@using Crm_Global;
@using Crm_DataUtilities.ViewModel;


<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title> Crm </title>

    @*Librerie per gestire i pdf lato client*@
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.3.2/jspdf.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/0.4.1/html2canvas.min.js"></script>

    

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/toastr")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/myscripts")
    @RenderSection("scripts", required: false)
</head>



<body>

    <div class="loading-spinner big hide"></div>
    <div class="SpineBackground hide"></div>

    <div class="document-container body-content">
        <nav>
            <ul style="float:left">
                <li>
                    <a href="/Home">HOME</a>
                </li>
                <li>
                    <a>AMMINISTRAZIONE</a>
                <li>
                    <a>GESTIONE</a>
                    <ul>
                        <li> @Html.ActionLink("PREVENTIVI", "Index", "Preventive")</li>
                        <li> @Html.ActionLink("ORDINI", "Index", "Order")</li>
                        <li> @Html.ActionLink("CLIENTI", "Index", "Customer")</li>
                        <li> @Html.ActionLink("LISTINI", "Index", "CustomerAndListino")</li>
                        <li> @Html.ActionLink("PRODOTTI", "Index", "Product")</li>
                    </ul>
                </li>
            </ul>
        </nav>


        <div id="HeaderInformation">

            @{
                PageParameters _pageParameters = ViewBag.pageparameters; }

            @Html.Partial("PartialMenuIndex", (PageParameters)_pageParameters)

            @if (_pageParameters.HasScrollButton)
            {<div onclick="topFunction()" id="btn_scrolltop" class="go_top_button"></div>}
        </div>

        <div class="render-body-zone">

            @RenderBody()
        </div>

    </div>


</body>

</html>
